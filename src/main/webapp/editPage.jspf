            <div id="publishLinkContent">${publishLink} rodde-notes.herokuapp.com/view?id=123</div>
        </div>
    </div>
    
        <form id="dataForm">
            <input type="hidden" value="${documentId}" id="documentId" />
            <input type="hidden" value="${editToken}" id="editToken" />
        </form>
